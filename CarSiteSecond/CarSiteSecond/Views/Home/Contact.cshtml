@{
    ViewBag.Title = "Contact";
}
<h1>Contact Us</h1>
<div class="contact-flex">
    <div>
        @using (Html.BeginForm())
        {
            <table class="contact-table">
                <tr>
                    <td class="bold left-text">Name</td>
                </tr>
                <tr>
                    <td class="left-text">
                        <input style="margin-left:0; width: 100%;" type="text" name="name" value="" id="Name" />
                    </td>
                </tr>
                <tr>
                    <td class="bold left-text">Email</td>
                </tr>
                <tr>
                    <td class="left-text">
                        <input style="margin-left:0; width: 100%;" type="text" name="email" value="" id="Email" />
                    </td>
                </tr>
                <tr>
                    <td class="bold left-text">Phone</td>
                </tr>
                <tr>
                    <td>
                        <input style="margin-left:0; width: 100%;" type="text" name="phone" value="" id="Phone" />
                    </td>
                </tr>
                <tr>
                    <td class="bold left-text">Message</td>
                </tr>
                <tr>
                    <td>
                        <textarea style="margin-left:0; width: 100%;" name="message" value="" id="Message"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>
                        <button type="submit">Submit</button>
                    </td>
                </tr>
            </table>
        }
    </div>
    <div>
        <img src="~/Data/Pictures/address.JPG" />
        <p>
            15 S 5th St #600
            <br />Minneapolis, MN 55402
        </p>
        <p>
            Sales: 111-111-1111
            <br />Service: 111-111-1112
        </p>
    </div>
</div>
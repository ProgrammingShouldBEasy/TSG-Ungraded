@model List<CarSiteSecond.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Users";
}

<h1>Users</h1>
@Html.ActionLink("Add a new User", "AddUser", "Admin")
<table id="users" class="border-mine table table-striped">
    <thead>
        <tr style="background-color: lightgray;">
            <td>Email</td>
            <td>Role</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (CarSiteSecond.ViewModels.UserViewModel m in Model)
        {
            <tr>
                <td>@m.Email</td>
                <td>@m.Role</td>
                <td>@Html.ActionLink("edit", "EditUser", "Admin", m.id)</td>
            </tr>
        }
    </tbody>
</table>


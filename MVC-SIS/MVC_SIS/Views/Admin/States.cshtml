@model List<Exercises.Models.Data.State>
@{
    ViewBag.Title = "States";
}

<div class="row">
    <div class="col-xs-12">
        <h3>States</h3>
        <h3>@Html.ActionLink("Add State", "AddState", "Admin", null, new { @class="btn btn-primary"})</h3>
    </div>
</div>

<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped" style="width: auto;">
            <thead>
                <tr>
                    <th>State Name</th>
                    <th>Abbreviation</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StateName</td>
                        <td>@item.StateAbbreviation</td>
                        <td>@Html.ActionLink(linkText: "Edit", actionName: "EditState", controllerName: "Admin", routeValues: new { stateAbbr = item.StateAbbreviation }, htmlAttributes: null)</td>
                        <td>@Html.ActionLink(linkText: "Delete", actionName: "DeleteState", controllerName: "Admin", routeValues: new { stateAbbr = item.StateAbbreviation }, htmlAttributes: null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

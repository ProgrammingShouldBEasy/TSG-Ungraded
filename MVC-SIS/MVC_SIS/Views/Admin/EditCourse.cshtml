@model Exercises.Models.Data.Course
@{
    ViewBag.Title = "EditCourse";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Edit Course</h3>
        @Html.ActionLink("Return to Courses", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.CourseId, htmlAttributes: new { @id = "courseID" })
        <div class="form-group">
            <label>Course</label>
            @Html.TextBoxFor(m => m.CourseName, new { @class = "form-control", placeholder = "Course name" })
            @Html.TextBoxFor(m => m.CourseId, new { @class = "form-control", placeholder = "Course ID" })
        </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>
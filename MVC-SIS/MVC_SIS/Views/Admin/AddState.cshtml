@model Exercises.Models.Data.State
@{
    ViewBag.Title = "Add State";
}

<h2>AddState</h2>

@using (Html.BeginForm("AddState", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <label for="stateName">State Name</label>
    <input type="text" name="StateName" value="" id="stateName" />
    <label for="stateAbbr">State Abbreviation</label>
    <input type="text" name="StateAbbreviation" value="" id="stateAbbr" />
    <button type="submit">Add State</button>
}




@model Exercises.Models.Data.Student
@{
    ViewBag.Title = "Delete Student";
}

<div class="row">
    <div class="col-xs-12 col-sm-3">
        @Html.Partial("StudentNav")
    </div>
    <div class="col-xs-12 col-sm-9">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.Address)
            @Html.HiddenFor(x => x.Courses)
            @Html.HiddenFor(x => x.FirstName)
            @Html.HiddenFor(x => x.LastName)
            @Html.HiddenFor(x => x.GPA)
            @Html.HiddenFor(x => x.Major)
            @Html.HiddenFor(x => x.StudentId, htmlAttributes: new { @id = "studentId" })
            <p>Are you sure that you wish to delete the state @Html.DisplayFor(m => m.FirstName) @Html.DisplayFor(m => m.LastName)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "Index", "Student", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>

